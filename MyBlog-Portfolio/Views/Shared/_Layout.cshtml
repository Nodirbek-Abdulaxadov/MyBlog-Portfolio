<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog_Portfolio</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/css/templatemo-style.css" rel="stylesheet" />


</head>
<body>

    <!-- MENU -->
    <section class="navbar custom-navbar" style="background: #0c043b" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <!-- lOGO TEXT HERE -->
                <a asp-controller="home" asp-action="index" class="navbar-brand">MyBlog</a>
            </div>

            <!-- MENU LINKS -->
            <div class="na collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-nav-first">
                    <li><a asp-controller="home" asp-action="index" class="smoothScroll">Home</a></li>
                    <li><a asp-controller="post" asp-action="index" class="smoothScroll">Blog</a></li>
                    <li><a asp-controller="home" asp-action="about" class="smoothScroll">About</a></li>
                    <li><a asp-controller="home" asp-action="contact" class="smoothScroll">Contact</a></li>
                </ul>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </section>

    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row">

                <div class="col-md-5 col-sm-12">
                    <div class="footer-thumb footer-info">
                        <h2>MyBlog</h2>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                            incididunt ut labore et dolore magna aliqua.
                        </p>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4" style="margin-left: 15px;">
                    <div class="footer-thumb">
                        <h2>Company</h2>
                        <ul class="footer-link">
                            <li><a asp-controller="home" asp-action="index">Home</a></li>
                            <li><a asp-controller="post" asp-action="index">Blog</a></li>
                            <li><a asp-controller="home" asp-action="about">About</a></li>
                            <li><a asp-controller="home" asp-action="contact">Contact</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4">
                    <div class="footer-thumb">
                        <h2>Find us</h2>
                        <p>Hiyobon street 65, <br> Margilan city, Fergana, Uzbekistan</p>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="footer-bottom">
                        <div class="col-md-6 col-sm-5">
                            <div class="copyright-text">
                                <p>&copy; 2021 Raqamli Texnologiyalar Markazi</p>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-7">
                            <div class="phone-contact">
                                <p>Call us <span>(+998) 73-254-2404</span></p>
                            </div>
                            <ul class="social-icon">
                                <li><a href="#" class="fa fa-facebook-square" attr="facebook icon"></a></li>
                                <li><a href="#" class="fa fa-twitter"></a></li>
                                <li><a href="#" class="fa fa-instagram"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/smoothscroll.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
